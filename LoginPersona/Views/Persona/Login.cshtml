@{
    ViewData["Title"] = "BIENVENIDOS";
}

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; 
        background-color:lightseagreen;
    }

    .login-form {
        width: 100%; 
        max-width: 400px;
        padding: 20px; 
        background-color:lightblue; 
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); 
    }

    body {
        background-color:lightseagreen;
    }


</style>

<div class="login-container">
    <div class="login-form">

    <h2 style="text-align: center;">@ViewData["Title"]</h2>


    <form method="post">
        <img itemprop="thumbnail" alt="silueta de caminar grupo de personas ilustración, caminar, grupo de personas, diverso, fotografía, relaciones públicas png thumbnail" title="silueta de caminar grupo de personas ilustración, caminar, grupo de personas, diverso, fotografía, relaciones públicas png"  src="https://w7.pngwing.com/pngs/817/730/png-transparent-walking-group-of-people-miscellaneous-photography-public-relations-thumbnail.png" data-src="https://w7.pngwing.com/pngs/817/730/png-transparent-walking-group-of-people-miscellaneous-photography-public-relations-thumbnail.png" 
           class="lazy lst_img loaded" width="350" height="155" data-was-processed="true">

        <div class="form-group" style="margin-bottom: 10px;">
        <label for="username" style="margin-bottom: 5px;">Usuario</label>
        <input type="text" id="username" name="username" class="form-control" required
        style="padding: 5px; font-size: 1rem; width: 100%;" />
        </div>
        <div class="form-group" style="margin-bottom: 10px;">
        <label for="password" style="margin-bottom: 5px;">Contraseña</label>
        <input type="password" id="password" name="password" class="form-control" required
          style="padding: 5px; font-size: 1rem; width: 100%;" />
        </div>

        <button type="submit" class="btn btn-primary" style="padding: 5px 15px; font-size: 
          1rem; width: 100%;">Iniciar Sesión</button>
        </form>


        @if (ViewBag.Error != null)
        {

        <div class="alert alert-danger" style="margin-top: 10px;">
        @ViewBag.Error
         </div>
        }

    </div>
</div>